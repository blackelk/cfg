set tabstop=4 shiftwidth=4 expandtab
set autoindent

syntax on
colorscheme zaibatsu

set wildmode=longest,list,full
set wildmenu

cnoreabbrev E e
cnoreabbrev W w
cnoreabbrev Q q
cnoreabbrev wQ wq
cnoreabbrev Wq wq
cnoreabbrev WQ wq
cnoreabbrev Set set
cnoreabbrev SEt set
cnoreabbrev Sp    split
cnoreabbrev Spl   split
